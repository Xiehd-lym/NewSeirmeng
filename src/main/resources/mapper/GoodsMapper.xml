<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haidong.newseirmeng.dao.GoodsMapper">

    <resultMap id="BaseResultMap" type="com.haidong.newseirmeng.entity.GoodsEntity" >
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="num" property="num" />
    </resultMap>

    <select id="show" parameterType="com.haidong.newseirmeng.entity.GoodsEntity" resultMap="BaseResultMap">
        select id,name,num from goods
        <where>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
        </where>
    </select>

</mapper>